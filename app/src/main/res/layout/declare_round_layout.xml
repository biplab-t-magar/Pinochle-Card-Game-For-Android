<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/compScoreDeclaration"
        android:layout_width="89dp"
        android:layout_height="33dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="4dp"
        android:text="0"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/compScoreLabel"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/humanScoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Human Score: "
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/compScoreLabel"
        app:layout_constraintTop_toBottomOf="@+id/compScoreLabel" />

    <TextView
        android:id="@+id/roundDeclaration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Beginning Round _"
        android:textColor="#3E4A9A"
        android:textSize="32sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/compScoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="Computer Score: "
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roundDeclaration" />

    <TextView
        android:id="@+id/humScoreDeclaration"
        android:layout_width="89dp"
        android:layout_height="33dp"
        android:text="0"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/humanScoreLabel"
        app:layout_constraintEnd_toEndOf="@+id/compScoreDeclaration" />

    <Button
        android:id="@+id/beginRoundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:onClick="beginRoundHandler"
        android:text="Begin Round"
        app:backgroundTint="#646FA8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/humanScoreLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>